<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Realize seu Login ou crie sua conta abaixo</p>

          <%- include('includes/messages') %>

          <div class="row">
            <div class="col-lg">
              <h4>Criar uma conta agora</h4>
              <p>Se você ainda não tem uma conta, preencha o formulário abaixo:</p>
              <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-primary">Criar sua conta</button>
              </form>

            </div>

            <div class="col-lg">
              <h4>Faça seu login no Sistema</h4>
              <p>Se você já tem uma conta, preencha os campos abaixo com seu e-mail e senha cadastrados:</p>
                <form action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                  <div class="form-group">
                    <label>Seu e-mail</label>
                    <input type="email" class="form-control" name="email">
                  </div>
                  <div class="form-group">
                    <label>Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>

                  <button type="submit" class="btn btn-primary">Entrar</button>
                </form>

            </div>

          </div>

        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>